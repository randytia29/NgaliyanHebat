<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent">

        <TableRow>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@drawable/pesonangaliyanhebat"
                tools:ignore="ContentDescription" />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:gravity="center">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_tematik"
                style="@style/fab_main"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="65dp"
                android:src="@drawable/baseline_palette_white_48"
                app:backgroundTint="@color/fab_tematik"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp"
                tools:ignore="RtlHardcoded" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_wisata"
                style="@style/fab_main"
                android:src="@drawable/wisata"
                app:backgroundTint="@color/fab_wisata"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_kuliner"
                style="@style/fab_main"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/baseline_restaurant_menu_white_48"
                app:backgroundTint="@color/fab_kuliner"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp"
                tools:ignore="RtlHardcoded" />

        </TableRow>
    </TableLayout>
</LinearLayout>
